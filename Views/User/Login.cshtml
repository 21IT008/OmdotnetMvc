@model OmdotnetMvc.Models.User

<div class="container">
    <h2 class="text-center display-4">Login</h2>
    <form asp-action="Login" method="post">
        <div class="form-group mb-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="container d-flex gap-4 justify-content-center">
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
            <div class="text-center">
                Don't have an account! <button class="btn btn-primary"><a class="text-decoration-none text-light" asp-action="Register">Register</a></button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}