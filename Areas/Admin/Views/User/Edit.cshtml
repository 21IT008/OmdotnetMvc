@{
    ViewData["Title"] = "User Updation";
}
@model OmdotnetMvc.Models.User

<div class="container">
    <h2 class="text-center display-4">User details</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group mb-2">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label class="form-label">Gender</label>
            <div class="form-check">
                <input asp-for="Gender" type="radio" value="Male" class="form-check-input" id="genderMale" />Male
            </div>
            <div class="form-check">
                <input asp-for="Gender" type="radio" value="Female" class="form-check-input" id="genderFemale" />Female
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label asp-for="Country" class="form-label"></label>
            <select asp-for="Country" class="form-control">
                <option value="" disabled selected>Select your country</option>
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="UK">UK</option>
            </select>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="container d-flex justify-content-center gap-4">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}